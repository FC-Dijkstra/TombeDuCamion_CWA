{
    "$schema": "https://json-schema.org/draft-07/schema",
    "title": "comments",
    "description": "commentaires sous les produits",
    "type": "array",
    "items": {
        "type": "object",
        "uniqueItems": true
    },
    "properties": {
        "c_uid": {
            "type": "string"
        },
        "author": {
            "type": "string"
        },
        "date": {
            "type": "string"
        },
        "message": {
            "type": "string"
        },
        "note": {
            "type": "integer",
            "exclusiveMaximum": 5,
            "exclusiveMinimum": 0
        }
    },
    "required": [
        "c_uid",
        "author",
        "date",
        "message",
        "note"
    ]
}
